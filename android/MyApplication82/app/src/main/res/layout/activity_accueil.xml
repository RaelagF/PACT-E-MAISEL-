<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#77a09b"
        >

        <ImageButton
            android:id="@+id/deconnect_button"
            android:layout_width="125dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/deconnect"
            android:onClick="finish"
            />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:padding="5dp">


            <ImageButton
                android:id="@+id/laverieAccueil"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:onClick="startLaverie"
                android:scaleType="fitXY"
                android:src="@drawable/laverie2"
                android:background="#FF8FBDB7"
                android:layout_marginVertical="20dp"
                android:layout_marginHorizontal="20dp"/>

            <ImageButton
                android:id="@+id/notificationsAccueil"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:onClick="startNotifications"
                android:src="@drawable/notif"
                android:scaleType="fitXY"
                tools:layout_editor_absoluteX="170dp"
                tools:layout_editor_absoluteY="58dp"
                android:background="#FF8FBDB7"
                android:layout_below="@id/laverieAccueil"
                android:layout_marginVertical="20dp"
                android:layout_marginHorizontal="20dp"/>

            <ImageButton
                android:id="@+id/cuisineAccueil"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:src="@drawable/cuisine"
                android:onClick="startCuisine"
                android:scaleType="fitXY"
                android:background="#FF8FBDB7"
                android:layout_toRightOf="@id/laverieAccueil"
                android:layout_marginVertical="20dp"
                android:layout_marginHorizontal="20dp"/>

            <ImageButton
                android:id="@+id/infoAccueil"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:onClick="startInfo"
                android:src="@drawable/information"
                android:scaleType="fitXY"
                android:background="#FF8FBDB7"
                android:layout_below="@id/notificationsAccueil"
                android:layout_centerHorizontal="true"
                android:layout_marginVertical="20dp"
                android:layout_marginHorizontal="20dp"/>

            <ImageButton
                android:id="@+id/paramètresAccueil"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:onClick="startParamètres"
                android:src="@drawable/param"
                android:scaleType="fitXY"
                android:background="#FF8FBDB7"
                android:layout_below="@id/cuisineAccueil"
                android:layout_toRightOf="@id/notificationsAccueil"
                android:layout_marginVertical="20dp"
                android:layout_marginHorizontal="20dp"/>

        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>